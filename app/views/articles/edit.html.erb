<h1>Editing article</h1>

<%= error_messages_for :article %>

<% form_for(@article) do |f| %>
  <p>
    <b>Titre</b><br />
    <%= f.text_field :titre %>
  </p>

  <p>
    <b>Corps</b><br />
    <%= f.text_area :corps %>
  </p>

  <p>
    <b>Auteur</b><br />
    <%= f.text_field :auteur %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @article %> |
<%= link_to 'Back', articles_path %>
